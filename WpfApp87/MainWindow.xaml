<Window x:Class="WpfApp87.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp87"
        mc:Ignorable="d" SizeToContent="WidthAndHeight" FontSize="16" ResizeMode="CanMinimize"
        Title="MainWindow" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Image Source="/WpfApp87;component/lyf1.jpg" Height="100" Margin="5"/>
            <Image Source="/WpfApp87;component/lyf1.jpg" Height="100" Margin="5">
                <Image.LayoutTransform>
                    <RotateTransform Angle="45"/>
                </Image.LayoutTransform>
            </Image>
            <Image Source="/WpfApp87;component/lyf1.jpg" Height="100" Margin="5"/>
        </StackPanel>

        <StackPanel Grid.Column="2">
            <Image Source="/WpfApp87;component/lyf1.jpg" Height="100" Margin="5"/>
            <Image Source="/WpfApp87;component/lyf1.jpg" Height="100" Margin="5" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <RotateTransform Angle="45"/>
                </Image.RenderTransform>
            </Image>
            <Image Source="/WpfApp87;component/lyf1.jpg" Height="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
