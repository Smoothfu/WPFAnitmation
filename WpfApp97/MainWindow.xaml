<Window x:Class="WpfApp97.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp97"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button Content="Blurred Button" FontSize="25" Margin="10">
            <Button.Effect>
                <BlurEffect Radius="6"/>
            </Button.Effect>
        </Button>

        <Button Content="Drop Shadow Button" FontSize="25" Margin="10">
            <Button.Effect>
                <DropShadowEffect BlurRadius="10" Color="Black" Opacity="0.7"/>
            </Button.Effect>
        </Button>
    </StackPanel>
</Window>
